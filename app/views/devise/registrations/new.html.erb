<%= render "devise/shared/error_messages", resource: resource %>

<div class="app-auth-body mx-auto">	
	<div class="app-auth-branding mb-4">
		<a class="app-logo" href="<%= root_path %>">
			<%= image_pack_tag "read-book-white.svg", class: "logo-icon me-2" %>
		</a>
	</div>

	<h2 class="auth-heading text-center mb-4">Cadastro</h2>					

		<div class="auth-form-container text-start mx-auto">
		  <%= form_for(resource, as: resource_name, url: registration_path(resource_name), class: "auth-form auth-signup-form") do |f| %>    
				<div class="mb-3">
					<%= f.label :name, class: "sr-only" %>
					<%= f.text_field :name, class: "form-control", placeholder: true, require: true %>
				</div>

				<div class="mb-3">
					<%= f.label :email, class: "sr-only" %>
					<%= f.email_field :email, class: "form-control", placeholder: true, require: true %>
				</div>

				<div class="mb-3">
					<%= f.label :password, class: "sr-only" %>
					<%= f.password_field :password, class: "form-control", placeholder: true, require: true %>
					<% if @minimum_password_length %>
						<div id="passwordhelp" class="form-text">A senha deve conter no mínimo <%= @minimum_password_length %> caracteres.</div>
					<% end %>
				</div>

				<div class="mb-3">
					<%= f.label :password_confirmation, class: "sr-only" %>
					<%= f.password_field :password_confirmation, class: "form-control", placeholder: true, require: true %>
				</div>

				<div class="mb-3">
					<div class="form-check">
						<input class="form-check-input" type="checkbox" value="" id="RememberPassword">
						<label class="form-check-label" for="RememberPassword">
							Eu concordo com os <a href="#" class="app-link">Termos de Serviço</a> e <a href="#" class="app-link">Política de Privacidade</a>.
						</label>
					</div>
				</div><!--//extra-->
					
				<div class="text-center">
					<%= f.submit "Cadastrar", class: "btn app-btn-primary w-100 theme-btn mx-auto" %>
				</div>
			<% end %><!--//auth-form-->
			
			<div class="auth-option text-center pt-5">
				Você já é cadastrado? <%= link_to "Entrar", new_session_path(resource_name), class: "text-link" %>
			</div>
	</div><!--//auth-form-container-->					    
</div>
