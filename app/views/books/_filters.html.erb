<div class="row g-3 mb-1 align-items-end">
  <div class="page-utilities">
    <div class="row g-2">
      <%= form_tag(books_path, :method => "GET", role: "form", class: "table-search-form row gx-1 align-items-center", id: "form-books-filter", remote: false) do %>   
        <div class="col-md-6 mb-3">
          <%= text_field_tag(:contains_text, params[:contains_text], placeholder: "Texto contido no título e descrição", class: "form-control") %>  
        </div><!--//col-->

        <div class="col-md-5  mb-3">
          <%= text_field_tag(:with_author, params[:with_author], placeholder: "Nome do autor", class: "form-control") %>          
        </div>

        <div class="col-md-1  mb-3">
          <button type="submit" class="btn app-btn-secondary text-rigth", id="filter-button">Buscar</button>
        </div>

      <% end %>
    </div><!--//row-->
  </div><!--//table-utilities-->
</div><!--//col-auto-->

