  $(document).ready(function() {
    update_form_before_submit = function(form_id) {
      // not implemented
    }
    
    $("#filter-button").on('click', function(event) {
      event.preventDefault();

      form_id = '#form-books-filter'
      inputs_hash = getInputs(form_id)
      params_ignore_list = Object.keys(inputs_hash)
      params = getParameters()

      update_form_fields(form_id, params, params_ignore_list)
      
      $(form_id).submit();
    });
  });
</script>
